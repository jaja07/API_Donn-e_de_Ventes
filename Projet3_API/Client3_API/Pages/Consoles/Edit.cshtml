@page
@model Client3_API.Pages.Consoles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game Console</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameConsole.Id" />
            <div class="form-group">
                <label asp-for="GameConsole.Nom" class="control-label"></label>
                <input asp-for="GameConsole.Nom" class="form-control" />
                <span asp-validation-for="GameConsole.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConsole.Fabricant" class="control-label"></label>
                <input asp-for="GameConsole.Fabricant" class="form-control" />
                <span asp-validation-for="GameConsole.Fabricant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameConsole.Type" class="control-label"></label>
                <input asp-for="GameConsole.Type" class="form-control" />
                <span asp-validation-for="GameConsole.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn custom-button" style="background-color: #8B0000; color: white;" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="back-to-list-link" style="color: blue; text-decoration: none;">
        <i class="fas fa-arrow-left"></i>
        Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
